<% provide(:title, "Logowanie") %>

<h3>Zaloguj się</h3>
<div class="col-md-6">
	<%= form_tag sessions_path, class: "form-horizontal" do %>

	<div class="form-group">
		<%= label_tag :username, "login", class: "col-sm-4 control-label" %>
		<div class="col-sm-8">
			<%= text_field_tag :username, "", class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= label_tag :password, "hasło", class: "col-sm-4 control-label" %>
		<div class="col-sm-8">
			<%= password_field_tag :password, "", class: "form-control" %>
		</div>
	</div>

	<div class="col-md-offset-4">
		<%= submit_tag "zaloguj", class: "btn btn-large btn-primary" %>
		<h5>Nie posisadasz konta? Zarejestruj się <%= link_to "tutaj", rejestracja_path %></h5>
		<% end %>
	</div>

</div>
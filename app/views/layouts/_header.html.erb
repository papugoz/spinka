<header class="container">
	<div class="page-header">
		<div class="row">
			<div class="row">
				<div class="col-md-2 col-sm-3 hidden-xs">
					<%= link_to image_tag('logo-transparent.png', alt: 'SPiNKa', class: 'img-responsive'), root_path %>
				</div>
				<h3 class="col-md-5 col-sm-6 col-xs-8">
					Stowarzyszenie Pomocy Niepełnosprawnym Kierowcom
				</h3>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="navbar navbar-default col-md-12">
			<div class="navbar-header col-md-2">
				<button class="btn btn-md navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="glyphicon glyphicon-chevron-down"></span>
				</button>
				<%= link_to "SPiNKa", root_path, class: 'navbar-brand' %>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li class="nav"><%= link_to 'Poznaj nas',	onas_path %></li>
					<li class="nav"><%= link_to 'Forum',			'#' %></li>
					<li class="nav"><%= link_to 'Pomoc', 			pomoc_path %></li>
					<li class="nav"><%= link_to 'Kontakt',		kontakt_path %></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<% if signed_in? %>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<%= current_user.username %> <span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to 'Profil', user_path(current_user) %></li>
							<% if current_user.admin? %>
							<li><%= link_to 'Użytkownicy', users_path %></li>
							<% end %>
							<li class="divider"></li>
							<li><%= link_to 'Wyloguj', wyloguj_path, method: "delete"%></li>
						</ul>
					</li>
					<% else %>
					<li class="nav"><%= link_to 'Zarejestruj się', rejestracja_path %></li>
					<li class="nav"><%= link_to 'Zaloguj', logowanie_path %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</header>
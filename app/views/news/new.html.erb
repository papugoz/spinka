<% provide(:title, "Nowy news") %>

<div class="row">
	<div class="col-md-12">
		<%= render 'shared/error_messages', object: @news %>
	</div>
</div>
<%= form_for @news, html: { class: "form" } do |f| %>

<div class="form-group">
	<%= f.label :title, "Tytuł" %>
	<%= f.text_field :title, class: "form-control" %>
</div>

<div class="form-group">
	<%= f.label :teaser, "Zajawka (max 250 znaków)" %>
	<%= f.text_area :teaser, class: "form-control", rows: 5 %>
</div>

<div class="form-group">
	<%= f.label :content, "Treść artykułu" %>
<%= f.text_area :content, class: "form-control", rows: 15 %>
</div>

<br>

<%= f.submit "Dodaj", class: "btn btn-primary" %>

<% end %>